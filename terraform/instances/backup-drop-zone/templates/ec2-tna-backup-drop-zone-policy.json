{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::tna-backup-drop-zone",
                "arn:aws:s3:::tna-backup-vault"
            ],
            "Sid": "DropZoneListBucket"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:GetObjectAttributes",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:BypassGovernanceRetention"
            ],
            "Resource": [
                "arn:aws:s3:::tna-backup-drop-zone/*"
            ],
            "Sid": "DropZoneS3Access"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:GetObjectAttributes",
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::tna-backup-vault/*"
            ],
            "Sid": "DropZoneS3AccessDefaultBackupVault"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::bv-digital-services/*",
                "arn:aws:s3:::bv-ds-digital-files/*"
            ],
            "Sid": "DropZoneS3WriteAccessBackupVaults"
        },
        {
            "Action": [
                "secretsmanager:GetSecretValue"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:secretsmanager:eu-west-2:637423167251:secret:application/lambda/backup-check-in-dCsJNp"
            ],
            "Sid": "DropZoneASMRead"
        },
        {
            "Action": [
                "ssm:GetParameter"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:ssm:eu-west-2:637423167251:parameter/application/lambda/backup-check-in",
            "Sid": "DropZoneSSMRead"
        },
        {
            "Effect": "Allow",
            "Action": [
                "sqs:SendMessage",
                "sqs:ReceiveMessage",
                "sqs:DeleteMessage",
                "sqs:GetQueueUrl",
                "sqs:SetQueueAttributes"
            ],
            "Resource": [
                "arn:aws:sqs:eu-west-2:637423167251:backup-check-in-queue.fifo"
            ],
            "Sid": "DropZoneSQSAccess"
        }
    ]
}
